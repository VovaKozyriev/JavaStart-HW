package vovakozyriev;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner kb = new Scanner (System.in);
		
		int a;
		int b; 
		int c;
		int d;
		int max;
		
		System.out.println("Enter the first number and press Enter");
		a = kb.nextInt();
		
		System.out.println("Enter the second number and press Enter");
		b = kb.nextInt();
		
		System.out.println("Enter the third number and press Enter");
		c = kb.nextInt();

		System.out.println("Enter the fourth number and press Enter");
		d = kb.nextInt();
		
		max = a;
		
		if (b > max) {
			max = b;
		} 
		if (c > max) {
			max = c;
		} 
		if (d > max) {
			max = d;
		}
		
		System.out.println("The biggest number is = " + max + ".");

	}

}
